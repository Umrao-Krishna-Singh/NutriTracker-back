{
    "name": "nutritracker-back-end",
    "version": "0.0.1",
    "author": "Umrao <https://github.com/Umrao-Krishna-Singh>",
    "license": "MIT",
    "description": "",
    "private": true,
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --preserveWatchOutput --watch",
        "debug": "nest start --preserveWatchOutput --debug --watch",
        "prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r vite-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "seed": "npx tsx prisma/seeders/index.ts",
        "tlt": "npx tsx src/modules/translate/index.ts",
        "migrate": "npx prisma migrate dev",
        "schema": "npx prisma generate",
        "recreate": "npx prisma generate && npx prisma migrate dev",
        "uzip": "tar -xzvf ./prisma/data/zipped_data.tar.gz -C ./prisma/data/",
        "rm-uzip": "rm -rf ./prisma/data/zipped"
    },
    "dependencies": {
        "@fastify/static": "^7.0.0",
        "@google-cloud/translate": "^8.5.0",
        "@nestjs/common": "^10.4.1",
        "@nestjs/core": "^10.4.1",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/platform-express": "^10.4.1",
        "@nestjs/platform-fastify": "^10.4.1",
        "@nestjs/swagger": "^8.0.2",
        "@nestjs/throttler": "^6.2.1",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.5",
        "exceljs": "^4.4.0",
        "kysely": "^0.27.4",
        "moment": "^2.30.1",
        "mysql2": "^3.11.2",
        "nest-winston": "^1.9.7",
        "nodemailer": "^6.9.16",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@nestjs/cli": "^10.4.5",
        "@nestjs/schematics": "^10.1.4",
        "@nestjs/testing": "^10.4.1",
        "@prisma/client": "^5.19.1",
        "@types/bcrypt": "^5.0.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.5.4",
        "@types/nodemailer": "^6.4.17",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "8.0.0",
        "@typescript-eslint/parser": "8.0.0",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-prettier": "5.0.0",
        "globals": "^15.9.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.3",
        "prisma": "^5.19.1",
        "prisma-kysely": "^1.8.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.19.1",
        "typescript": "5.5.4",
        "zod-prisma-types": "^3.1.8"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
