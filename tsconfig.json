{
    "compilerOptions": {
        //for now keep it as commonjs but later add a bundler into the process and change this to esnext and moduleresolution to bundler
        "module": "CommonJS",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@src": ["./src"],
            "@src/*": ["./src/*"],
            "@prism": ["./prisma"],
            "@prism/*": ["./prisma/*"]
        }
    }
}
